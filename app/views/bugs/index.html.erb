<h1>Listing bugs</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Status</th>
    <th>Severity</th>
    <th>Priority</th>
    <th>Product</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bugs.each do |bug| %>
  <tr>
    <td><%= bug.description %></td>
    <td><%= Bug::STATUSES.rassoc(bug.status)[0] %></td>
    <td><%= Bug::SEVERITIES.rassoc(bug.severity)[0] %></td>
    <td><%= Bug::PRIORITIES.rassoc(bug.priority)[0] %></td>
    <td><%= bug.product.name %></td>
    <td><%= link_to 'Show', bug %></td>
    <td><%= link_to 'Edit', edit_bug_path(bug) %></td>
    <td><%= link_to 'Destroy', bug, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

