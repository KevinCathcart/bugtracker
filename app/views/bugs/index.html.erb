<h1>Listing bugs</h1>

<table>
  <tr>
    <th>Description</th>
    <th>See also</th>
    <th>Status</th>
    <th>Severity</th>
    <th>Priority</th>
    <th>Duplicate of</th>
    <th>Creator</th>
    <th>Product</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bugs.each do |bug| %>
  <tr>
    <td><%= bug.description %></td>
    <td><%= bug.see_also %></td>
    <td><%= bug.status %></td>
    <td><%= bug.severity %></td>
    <td><%= bug.priority %></td>
    <td><%= bug.duplicate_of_id %></td>
    <td><%= bug.creator_id %></td>
    <td><%= bug.product_id %></td>
    <td><%= link_to 'Show', bug %></td>
    <td><%= link_to 'Edit', edit_bug_path(bug) %></td>
    <td><%= link_to 'Destroy', bug, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

